# Environment Configuration
# Copy this file to .env and update with your values

# Logging Configuration
LOG_LEVEL=info          # Options: error, warn, info, debug
LOG_TO_FILE=false       # Set to true to enable file logging

# Output Configuration
USE_GIG_FOLDERS=true    # Create separate folders for each gig
SCREENSHOT_SUBFOLDER=screenshots

# Browser Configuration
BROWSER_TIMEOUT=30000   # Browser timeout in milliseconds
VIEWPORT_WIDTH=1920     # Screenshot viewport width
VIEWPORT_HEIGHT=1080    # Screenshot viewport height

# Screenshot Configuration
SCREENSHOT_FORMAT=png   # Options: png, jpeg
SCREENSHOT_QUALITY=100   # Quality for jpeg (1-100)

# Development
NODE_ENV=production     # Options: development, production
